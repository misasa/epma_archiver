<%- model_class = Map -%>
<div class="page-header">
  <h1><%= "#{@map.area.name} #{@map.element_name}" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:path) %>:</strong></dt>
  <dd><%= @map.path %></dd>
  <dt><strong>Last modified at:</strong></dt>
  <dd><%= @map.mtime %></dd>
</dl>

<p>
  <%= image_tag @map.image.url(:medium) %>
</p>

<%= link_to t('.back', :default => t("helpers.links.back")),
              area_path(@map.area), :class => 'btn btn-default'  %>
